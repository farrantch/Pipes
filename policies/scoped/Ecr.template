{
    "DeployStatements": [
        {
            "Sid": "ScopedEcr",
            "Effect": "Allow",
            "Action": [
                "ecr:*"
            ],
            "Resource": {
                "Fn::Sub": "arn:aws:ecr:*:${AWS::AccountId}:repository/${Scope}-*"
            }
        },
        {
            "Sid": "ScopedEcrWildcard",
            "Effect": "Allow",
            "Action": [
                "ecr:CreateRepository"
            ],
            "Resource": "*"
        },
        {
            "Sid": "ScopedEcrResourceTag",
            "Effect": "Allow",
            "Action": [
                "ecr:*"
            ],
            "Resource": {
                "Fn::Sub": "arn:aws:ecr:*:${AWS::AccountId}:repository/*"
            },
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Scope": [
                        {
                            "Fn::Sub": "${Scope}"
                        }
                    ],
                    "aws:ResourceTag/Environment": [
                        {
                            "Fn::Sub": "${Environment}"
                        }
                    ]
                }
            }
        },
        {
            "Sid": "ScopedEcrRequestTag",
            "Effect": "Allow",
            "Action": [
                "ecr:*"
            ],
            "Resource": {
                "Fn::Sub": "arn:aws:ecr:*:${AWS::AccountId}:repository/*"
            },
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/Scope": [
                        {
                            "Fn::Sub": "${Scope}"
                        }
                    ],
                    "aws:RequestTag/Environment": [
                        {
                            "Fn::Sub": "${Environment}"
                        }
                    ]
                }
            }
        }
    ],
    "ServiceStatements": [
        {
            "Sid": "ScopedEcr",
            "Effect": "Allow",
            "Action": [
                "ecr:Batch*",
                "ecr:CompleteLayerUpload",
                "ecr:Describe*",
                "ecr:Get*",
                "ecr:InitiateLayerUpload",
                "ecr:List*",
                "ecr:PutImage*",
                "ecr:UploadLayerPart"
            ],
            "Resource": {
                "Fn::Sub": "arn:aws:ecr:*:${AWS::AccountId}:repository/${Scope}-*"
            }
        },
        {
            "Sid": "ScopedEcrTag",
            "Effect": "Allow",
            "Action": [
                "ecr:*"
            ],
            "Resource": {
                "Fn::Sub": "arn:aws:ecr:*:${AWS::AccountId}:repository/*"
            },
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Scope": [
                            {
                            "Fn::Sub": "${Scope}"
                        }
                    ],
                    "aws:ResourceTag/Environment": [
                        {
                            "Fn::Sub": "${Environment}"
                        }
                    ]
                }
            }
        }
    ],
    "UserStatements": [
        {
            "Sid": "ScopedEcr",
            "Effect": "Allow",
            "Action": [
                "ecr:Get*",
                "ecr:Describe*",
                "ecr:List*"
            ],
            "Resource": {
                "Fn::Sub": "arn:aws:ecr:*:${AWS::AccountId}:repository/${Scope}-*"
            }
        },
        {
            "Sid": "ScopedEcrTag",
            "Effect": "Allow",
            "Action": [
                "ecr:Get*",
                "ecr:Describe*",
                "ecr:List*"
            ],
            "Resource": {
                "Fn::Sub": "arn:aws:ecr:*:${AWS::AccountId}:repository/*"
            },
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Scope": [
                            {
                            "Fn::Sub": "${Scope}"
                        }
                    ],
                    "aws:ResourceTag/Environment": [
                        {
                            "Fn::Sub": "${Environment}"
                        }
                    ]
                }
            }
        }
    ]
}