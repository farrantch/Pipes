{
    "Statements": [
        {
            "Sid": "ResourceScopedCloudWatchLogs",
            "Effect": "Allow",
            "Action": [
                "logs:*"
            ],
            "Resource": [
                {
                    "Fn::Sub": "arn:aws:logs:*:${AWS::AccountId}:log-group:${Environment}-${Scope}-*"
                },
                {
                    "Fn::Sub": "arn:aws:logs:*:${AWS::AccountId}:log-group:${Environment}-${Scope}-*:*"
                },
                {
                    "Fn::Sub": "arn:aws:logs:*:${AWS::AccountId}:log-group:${Environment}-${Scope}-*:*:*"
                }
            ]
        },
        {
            "Sid": "ResourceScopedCloudWatchLogsWildcard",
            "Effect": "Allow",
            "Action": [
                "logs:Describe*"
            ],
            "Resource": "*"
        }
    ],
    "UserStatements": [
        {
            "Sid": "ResourceScopedCloudWatchLogs",
            "Effect": "Allow",
            "Action": [
                "logs:Get*",
                "logs:List*"
            ],
            "Resource": [
                {
                    "Fn::Sub": "arn:aws:logs:*:${AWS::AccountId}:log-group:${Environment}-${Scope}-*"
                },
                {
                    "Fn::Sub": "arn:aws:logs:*:${AWS::AccountId}:log-group:${Environment}-${Scope}-*:*"
                },
                {
                    "Fn::Sub": "arn:aws:logs:*:${AWS::AccountId}:log-group:${Environment}-${Scope}-*:*:*"
                }
            ]
        },
        {
            "Sid": "ResourceScopedCloudWatchLogsWildcard",
            "Effect": "Allow",
            "Action": [
                "logs:Describe*"
            ],
            "Resource": "*"
        }
    ]
}