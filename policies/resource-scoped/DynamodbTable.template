                        }
                    ],
                    "aws:ResourceTag/Environment": [
                        {
                            "Fn::Sub": "${Environment}"
                        }
                    ]
                }
            }
        }
    ],
    "UserStatements": [
        {
            "Sid": "ResourceScopedDynamodbTable",
            "Effect": "Allow",
            "Action": [
                "dynamodb:Get*",
                "dynamodb:Describe*",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynadmob:List*"
            ],
            "Resource": [
                {
                    "Fn::Sub": "arn:aws:dynamodb:*:${AWS::AccountId}:table/${Environment}-${Scope}-*"
                },
