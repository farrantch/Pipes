                    "Fn::Sub": "arn:aws:dynamodb:*:${AWS::AccountId}:table/${Environment}-${Scope}-*:*"
                }
            ]
        },
        {
            "Sid": "ResourceScopedDynamodbTableCondition",
            "Effect": "Allow",
            "Action": [
                "dynamodb:Get*",
                "dynamodb:Describe*",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynadmob:List*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Scope": [
                            {
                            "Fn::Sub": "${Scope}"
                        }
                    ],
                    "aws:ResourceTag/Environment": [
                        {
                            "Fn::Sub": "${Environment}"
                        }
                    ]
                }
            }
        }
    ]
