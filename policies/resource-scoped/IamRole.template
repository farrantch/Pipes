{
    "Statements": [
        {
            "Sid": "ResourceScopedIamRoleCreate",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:PutRolePolicy",
                "iam:DeleteRolePolicy"
            ],
            "Resource": [
                {
                    "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/${Environment}-${Scope}-*"
                }
            ],
            "Condition": {
                "StringEquals": {
                    "iam:PermissionsBoundary": {
                        "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/${Environment}-${MasterPipeline}-scopes-${Scope}-IamPolicyBaseline"
                    }
                }
            }
        },
        {
            "Sid": "ResourceScopedIamRoleManage",
            "Effect": "Allow",
            "Action": [
                "iam:GetRole",
                "iam:DeleteRole"
            ],
            "Resource": [
                {
                    "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/${Environment}-${Scope}-*"
                }
            ]
        },
        {
            "Sid": "IamManagePolicy",
            "Effect": "Allow",
            "Action": [
                "iam:*"
            ],
            "Resource": [
                {
                    "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/${Environment}-${Scope}-*"
                }
            ]
        }
    ]
}